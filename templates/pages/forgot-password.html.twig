{% extends '/base.html.twig' %}
{% block body %}
    {% include '/partials/header.html.twig' %}
    <div id="content">
        <div class="content-box container">
            <form action="{{ path('forget_password_action') }}" method="POST" style="width: 400px; margin: 0 auto; margin-top: 120px; margin-bottom: 120px; padding: 30px; border-radius: 30px; background-color: #F45B69">
                <h2 style="text-align: center; font-family: europa;"><i class="fas fa-question"></i> Wachtwoord vergeten</h2>
                {% if error is defined and error is not empty %}
                    <h3 style="text-align: center; font-family: europa;"><i class="fas fa-question"></i>{{ error }}</h3>
                {% endif %}
                <div style="font-family: proxima-nova; margin: 15px 0; text-align: center;">Voer uw email-adres in om het reset-process te vervolgen:</div>
                <div class="form-group">
                    <label for="email"></label>
                    <input type="email" name="email" class="form-control" placeholder="Email" style="font-family: proxima-nova;">
                </div>
                <div class="form-group">
                    <input type="submit" class="form-control btn btn-primary" value="Wachtwoord resetten">
                </div>
            </form>
        </div>
    </div>
    {% include '/partials/footer.html.twig' %}
{% endblock %}